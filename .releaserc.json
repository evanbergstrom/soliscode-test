{
  "branches": ["main"],
  "tagFormat": "v${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",

    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],

    ["@semantic-release/exec", {
      "prepareCmd": "mvn -B versions:set -DnewVersion='${nextRelease.version}' -DgenerateBackupPoms=false"
    }],

    ["@semantic-release/git", {
      "assets": ["pom.xml", "CHANGELOG.md"],
      "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
    }],

    "@semantic-release/gitlab",

    ["@semantic-release/exec", {
      "successCmd": "mvn -B versions:set -DnextSnapshot -DgenerateBackupPoms=false && git add pom.xml && git commit -m \"chore: next snapshot after ${nextRelease.version}\" && git push origin HEAD:main"
    }]
  ]
}